# ============================================
# EPR Legal SaaS - Essential Environment Variables
# Copy to .env and fill in your values
# ============================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development

# ============================================
# DATABASES
# ============================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=epr_saas
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/epr_saas

# Redis
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================
# SERVICES PORTS
# ============================================
USER_SERVICE_PORT=8001
PACKAGE_SERVICE_PORT=8002
AI_CHATBOT_PORT=8004

# ============================================
# SERVICE-TO-SERVICE URLS
# ============================================
USER_SERVICE_URL=http://localhost:8001
PACKAGE_SERVICE_URL=http://localhost:8002

# ============================================
# AI / LLM (REQUIRED for ai-chatbot-service)
# ============================================
OPENAI_API_KEY=sk-proj-xxx  # Get from https://platform.openai.com/api-keys

# ============================================
# SECURITY
# ============================================

# JWT (REQUIRED - change this!)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ============================================
# AI CHATBOT CONFIG
# ============================================
CHECK_QUOTA=true
RECORD_USAGE=true
DEBUG=true

# ============================================
# OPTIONAL - UTILITIES (use with docker-compose profiles)
# ============================================

# pgAdmin (docker-compose --profile tools up)
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@epr.com
PGADMIN_PASSWORD=admin

# Redis Commander (docker-compose --profile tools up)
REDIS_COMMANDER_PORT=8081

# Prometheus (docker-compose --profile monitoring up)
PROMETHEUS_PORT=9090

# Grafana (docker-compose --profile monitoring up)
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
